                                    <option value="lighting" <%= businessitem.category=='lighting'?'selected':'' %>>Lighting</option>
                                    <option value="home-decor" <%= businessitem.category=='home-decor'?'selected':'' %>>Home decor</option>
                                    <option value="kitchen-dining" <%= businessitem.category=='kitchen-dining'?'selected':'' %>>Kitchen & Dining</option>
                                    <option value="bathroom" <%= businessitem.category=='bathroom'?'selected':'' %>>Bathroom</option>
                                    <option value="living" <%= businessitem.category=='living'?'selected':'' %>>Living</option>
                                    <option value="bedroom" <%= businessitem.category=='bedroom'?'selected':'' %>>Bedroom</option>
                                    <option value="plants" <%= businessitem.category=='plants'?'selected':'' %>>Plants</option>
                                    <option value="seeds" <%= businessitem.category=='seeds'?'selected':'' %>>Seeds</option>
