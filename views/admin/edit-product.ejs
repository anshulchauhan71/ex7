                              <label for="exampleInputFile">Product Price</label>
                              <input type="text" name="price" id="exampleInputFile" class="form-control" value="<%= businessitem.price%>">
            
                            
                            </div>
                            
                              

<!-- Modal -->

                              
                              <div class="form-group col-md-4 " >
                                <label  style="display:block">Show on homepage</label>
