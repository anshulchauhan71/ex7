                                 <option value="">Select</option>
                                 <option value="amazon" <%= businessitem.store=='amazon'?'selected':'' %>>Amazon</option>
                                 <option value="flipkart" <%= businessitem.store=='flipkart'?'selected':'' %>>flipkart</option>
                                 <option value="pepperfry" <%= businessitem.store=='pepperfry'?'selected':'' %>>pepperfry</option>
                                  </select>
                              </div>
                            
                             <div class="form-group col-md-4">
                              <label  >Product  Offer</label>
                              <input type="text" class="form-control" name="offer" value="<%= businessitem.offer%>"  >
                            </div> <div class="form-group col-md-4">
                              <label  >Offer price</label>
                              <input type="text" class="form-control" name="offerprice" value="<%= businessitem.offerprice%>"  >
                            </div>
                            <div class="form-group col-md-4">
                              <label for="exampleInputFile">Product Image</label>
                                <%if(businessitem.logo==='undefined'){%> <%} else{ %><img src="/images/post/<%= businessitem.logo%>" width="40px"><%}%>
                                
                              <input type="hidden" name="updateimage" value="<%= businessitem.logo%>" class="form-control" >
                              <input type="file" name="nimage" id="exampleInputFile" class="form-control" >
            
                            
                            </div> <div class="form-group col-md-4">
                              <label for="exampleInputFile">Product Link</label>
                              <input type="text" name="link" id="exampleInputFile" class="form-control" value="<%= businessitem.url%>">
            
                            
                            </div>
