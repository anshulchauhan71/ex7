                                <input type="radio" name="homepage"  value="1" <%= businessitem.homepage=='1'?'checked':'' %> > Yes </label>
                                <label>
                                  <input type="radio" name="homepage" value="0"<%= businessitem.homepage=='0'?'checked':'' %> > No </label>
                              </div> 
