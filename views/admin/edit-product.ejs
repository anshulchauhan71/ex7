                                <label  >Full Description</label>
                               
                                <textarea  class="form-control" name="long" id="editor1"><%= businessitem.long%></textarea>
                              </div>
                          </div>
                     
                    
                    
                          <!-- /.box-body -->
            
                          <div class="box-footer">
                            <button type="submit" class="btn btn-primary">Submit</button>
