<% include include/header.ejs%>
<% include include/sidebar.ejs%>

<div class="content-wrapper">
   
    <section class="content-header">
      <h1>
     Category 
       
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Add Category</a></li>
      
      </ol>
    </section>
    <section class="content">
        <div class="row">
        
          <div class="col-md-1">
              </div>
          <div class="col-md-5">
                <div class="box box-primary">
                        <div class="box-header with-border">
                          <h3 class="box-title">Add Category</h3>
                        </div>
                      
<% if(message !='') {%>
                        <p class="text-center text-danger"><%= message %></p>
                        <%}%>
                        <form class="add-player-form" action="/admin/post-category" method="post" enctype="multipart/form-data" >
                          <div class="box-body">
                                <div class="form-group ">
                              <label for="exampleInputEmail1">Parent Category Name(Optional)</label>
                                      <select class="form-control" name="p_categroy"><option value="">Select</option><% updateValue2.forEach((cateitems)=>{ %><option value="<%= cateitems.category_name %>" <%=updateValue.parent_category==cateitems.category_name?'selected':''%>><%= cateitems.category_name %> </option> <% }); %></select>
                            </div>
                            <div class="form-group">
                              <label for="exampleInputEmail1">Category Name</label>
                              <input type="text" class="form-control" name="cat_name"  value="<%= updateValue.category_name %>" id="exampleInputEmail1" placeholder="Enter Category Name" required>
                            </div>
                           
                            <div class="form-group">
                              <label for="exampleInputFile">Category Image</label>
                                
                              <input type="file" name="cat_image" id="exampleInputFile" class="form-control" required>
            
                            <img src="/images/<%= updateValue.category_image %>" width="40px" style="margin:10px 0">
                            </div>
                         
                          </div>
                          <!-- /.box-body -->
            
                          <div class="box-footer">
                            <button type="submit" class="btn btn-primary">Submit</button>
                          </div>
                        </form>

                      </div>
            </div>
             
            <div class="col-md-1">
              </div>
            </div>
        
            </section>

    </div>


<% include include/footer.ejs%>