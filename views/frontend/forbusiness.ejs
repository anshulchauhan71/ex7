                                       if(errors.param=='category'){ %>
                                    <span class="err_msg">  <%= errors.msg %></span>
                                    <% }})%>
                                 </div>
                              </div>
                               <div class="col-lg-12">
                    <label >Services*
                                    </label>            
   
                                   <div class="sericeoffer">
                                       
                                       <div id="services">
                                       
                                       </div><div class="sericeformd">
                                   <input type="text" id="serviceAppend" placeholder="service1,service2,service3.." class="form-control">
                                       <button type="button" id="add_services">+Add</button>
                                   </div>
                                       <div id="servicesAerr"></div>
                                   </div>
                                      <% errors.forEach((errors)=>{ 
                                       if(errors.param=='service'){ %>
                                    <span class="err_msg">  <%= errors.msg %></span>
                                    <% }})%>
                               </div>
                             
                              <div class="col-lg-12">
                                 <div class="form-group">
                                    <label for="e2">Company Name
                                    *</label>
                                    <input type="text" name="ads_title" placeholder="Ex. Sales Executive"  class="form-control" value="<%= ads_title%>">
                                    <% errors.forEach((errors)=>{ 
                                       if(errors.param=='ads_title'){ %>
                                    <span class="err_msg">  <%= errors.msg %></span>
                                    <% }})%>
                                 </div>
                 
<!--
                                 <% if(message != '') { %>
                                 <p class="text-danger"><%= message%></p>
                                 <% }%>
-->
                              </div>
                              <div class="col-lg-8">
                                 <div class="form-group">
                                    <label for="e1">Company Logo</label>
                                    <div class="comapny_logo_pre">
                                       <div class="comapny_logo_img"> <img src="<%if(ads_logo){%>/images/post/<%= ads_logo%><%}else{%>/images/profile.jpg<%}%>" alt="" id="image_publicer">  </div>
                                        <input type="hidden"  value="<%= ads_logo%>" name="ads_updatelogo">
                                       <div class="custom-file">
                                          <input type="file" class="custom-file-input"   id="customFile" onchange="readURL(this);" name="ads_logo" accept="" >
                                          <label class="custom-file-label" for="customFile"><i class="fa fa-cloud-upload" aria-hidden="true"></i>             Upload Featured Image </label>
                                            <% errors.forEach((errors)=>{ 
                                       if(errors.param=='ads_logo'){ %>
                                    <span class="err_msg">  <%= errors.msg %></span>
                                    <% }})%>
                                       </div>
                                    </div>
                                 </div>
                              </div>
                              <div class="col-lg-12">
                                 <div class="form-group">
                                    <label for="e2">Description of your  Business  *</label>
                                    <textarea name="ads_description" id="editor" rows="2"><%= ads_description%></textarea>
                                    <% errors.forEach((errors)=>{ 
                                       if(errors.param=='ads_description'){ %>
                                    <span class="err_msg">  <%= errors.msg %></span>
                                    <% }})%>
                                 </div>
                              </div>
                           </div>
                           <div class="Bpart_0 row">
                              <div class="col-md-12">
                                 <p class="add_01b">Add Photos* </p>
                                 <p class="add_012hold">While selecting photos hold Ctrl and select several photos</p>
                                 <p class="profile_instruction">2MB max in jpeg, png or gif</p>
                                 <div  id="imgSrc" class="imageUploadgalery"></div>
                                 <% errors.forEach((errors)=>{ 
                                    if(errors.param=='ads_media'){ %>
                                 <span class="err_msg">  <%= errors.msg %></span>
                                 <% }})%>
                                 <div class="avatar-upload">
                                    <div class="avatar-edit">
                                       <input type="file" id="imageUploadc" name="ads_media"  multiple >
                                       <label for="imageUploadc"> <i class="fa fa-plus-square-o" aria-hidden="true"></i>
                                       Upload Pictures</label>
                                    </div>
                                   <% if(imageSlt != '') { %>
                                    <p class="err_msgNew"><%= imageSlt %></p>
                                     <%}else{%><P class="err_msgNew">Upload altest 1 image

</P><%}%>
                                 </div>
                                 <div>  </div>
                              </div>
                           </div>
                           <div class="Bpart_0 row">
                              <div class="col-lg-12">
                                  <h3 class="busTitle"><span>Location details</span>
