   <body>
      <section class="addBusiness">
         <div class="container">
            <div class="col-sm-12 logoitems">
               <div class="Logolisting"><img class="logo" src="/images/logo2.png" alt="trendsxp Logo"></div>
               <h1 class="businessList-title">Register your business
               </h1>
            </div>
            <div class="business_heads">
               <form method="post" enctype="multipart/form-data" >
                  <div class="Business_ads">
                     <div class="row">
                        <div class="col-lg-12">
