                                       if(errors.param=='ads_city'){ %>
                                    <span class="err_msg">  <%= errors.msg %></span>
                                    <% }})%>
                                 </div>
                              </div>
                                  <div class="col-lg-6">
                                 <div class="form-group">
                                       <label for="e3">Picode</label>
                                      <input type="text"   name="pincode" class="form-control"  placeholder="Area Pincode"value="<%= ads_pincode%>">
                                      </div>
                               </div>
                              <div class="col-lg-6">
                                 <div class="form-group">
                                    <label for="e3">Address*</label>
                                    <textarea type="text" class="form-control" name="ads_address" id="searchTextField" ><%= ads_address%></textarea>
                                    <% errors.forEach((errors)=>{ 
                                       if(errors.param=='ads_address'){ %>
                                    <span class="err_msg">  <%= errors.msg %></span>
                                    <% }})%>
                                 </div>
                              </div>
                           </div>
                           <div class="clearfix"></div>
                           <div class="Bpart_0 row">
                              <div class="col-md-12">
                                  <h3 class="busTitle"><span>Options</span>
                                 </h3>
                              </div>
                              <div class="col-lg-6">
                                 <div class="form-group">
                                    <label for="e9">Charges (if applicable)</label>
                                    <input type="text"   name="ads_price" class="form-control" value="<%= ads_price%>">
                                 </div>
                              </div>
                              <div class="col-lg-6">
                                 <div class="form-group">
                                    <label for="e9"> Web Site:
                                    </label>
                                    <input type="text"  name="ads_website" class="form-control" value="<%= ads_website%>" placeholder="http://www.Company.com">
                                 </div>
                              </div>
                           </div>
                           <div class="Bpart_0 row">
                              <div class="col-md-12">
                                  <h3 class="busTitle"><span>Social Info</span></h3>
                              </div>
                              <div class="col-lg-6">
                                 <div class="form-group">
                                    <label for="e4">Facebook </label>
                                    <input type="text" placeholder="www.facebook.com" name="facebook" class="form-control"  value="<%= ads_facebook%>" >
                                 </div>
                              </div>
                              <div class="col-lg-6">
                                 <div class="form-group">
                                    <label for="e4">Instagram </label>
                                    <input type="text" placeholder="www.instagram.com" name="instagram" class="form-control"  value="<%= ads_instagram%>" >
                                 </div>
                              </div>
                              <div class="col-lg-6">
                                 <div class="form-group">
                                    <label for="e6">Linkedin</label>
                                    <input type="text" placeholder="www.linkedin.com" name="linkedin" class="form-control"  value="<%= ads_linkedin%>" >
                                 </div>
                              </div>
                              <div class="col-lg-6">
                                 <div class="form-group">
                                    <label for="e6">Twitter</label>
                                    <input type="text" placeholder="www.twitter.com" name="twitter" class="form-control"  value="<%= ads_twitter%>" >
                                 </div>
                              </div>
                           </div>
                        </div>
                        <script>
                             function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#image_publicer')
                        .attr('src', e.target.result);
                };

                reader.readAsDataURL(input.files[0]);
            }
        }
                           $(function() {
                           // Multiple images preview in browser
                           var imagesPreview = function(input, placeToInsertImagePreview) {
                           
                           if (input.files) {
                           var filesAmount = input.files.length;
                           
                           for (i = 0; i < filesAmount; i++) {
                             var reader = new FileReader();
                           
                             reader.onload = function(event) {
                                 $($.parseHTML('<img class="thumbnail-preview">')).attr('src', event.target.result).appendTo(placeToInsertImagePreview);
                             }
                           
                             reader.readAsDataURL(input.files[i]);
                           }
                           }
                           
                           };
                           
                           $("#imageUploadc").change(function(){
                           imagesPreview(this, '#imgSrc');
                           });
                           });
                           
                           
                           
                           
                           
                        </script>
                     </div>
                  </div>
                  <div class="osahan-area text-center mt-3">
                     <button class="btn btn-outline-primary" type="submit">Submit </button>
