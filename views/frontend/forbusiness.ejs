                              <div class="col-lg-12">
                                  <h3 class="busTitle"><span>Business Information</span>
                                 </h3>
                              </div>
                              <div class="col-lg-12">
                                 <div class="form-group">
              
                                    <label for="e1">Category*
                                    </label> 
                                    <select id="Ccategory" class="form-control" name="category"  >
                                             <%if(category){ %>  <option value="<%=category%>"><%=category%></option> <%} else{%>
                                     <option value="">Select</option><%}%>
