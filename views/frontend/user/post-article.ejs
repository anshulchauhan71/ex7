  <body id="page-usertop">
      <% include ../include/user-header.ejs %>
          <div class="single-channel-page" id="content-wrapper">
          
              <section class="userdashbordA">
            <div class="container">
                <div class="row">
                        <div class="col-sm-12">
    <h1 class="wizard-title">Post a free Article</h1>
 
</div> </div>
                    <div class="row">
                  <div class="col-lg-12">
                      
                         <form action="" enctype="multipart/form-data" method="post">
                             <%= message%>
                        <div class="row">
                      
              
                            <div class="col-lg-12">
                              <div class="form-group">
                                 <label for="e1">Title (The Unique Idea, 20-25 words)</label>
                                 <input type="text" name="title1" placeholder="Contrary to popular belief, Lorem Ipsum (2019) is not." class="form-control">
                                   <% errors.forEach((error)=>{ %>
                                <% if(error.param == 'title1'){ %>
                               
                               <p class="errmsg text-danger"><%= error.msg %></p>
                               <p class="errmsg text-danger"><%= error.ignore_whitespace %></p>
                               
                               <%} %>
                               <% })  %>
                              </div>
                              
                              
                           </div>  
                         
                               <div class="col-lg-12">
                              <div class="form-group">
                                 <label for="e3">Category</label>
                                 <select id="category" class="form-control" name="category">
                                     <option value="">Select</option>
                                     <% articleResult.forEach((articleResult)=>{  %> <option value="<%= articleResult.category_name%>"><%= articleResult.category_name%> </option><%})%>
                                     
                                 </select>
                                   <% errors.forEach((error)=>{  %>
                                  
                                  <% if(error.param == 'category') { %>
                                  <p class="errmsg text-danger"> <%= error.msg %> </p>
                                  
                                  <% } %>
                                  <% }); %>
                              </div>
                           
                           </div>
                            
                         
                           <div class="col-lg-12">
                              <div class="form-group">
                                 <label for="e4">Publisher Name</label>
                                  <input type="text" placeholder="ex. Sachin Kumar" name="author" id="e1" class="form-control" value="<%= req.session.name %>">
                              </div>
                           </div>
                           <div class="col-lg-6">
                                <div class="form-group">
                                 
                                 <label for="e1">Publisher Image(Optional)</label>
                                  <div class="comapny_logo_pre">
                                      <div class="comapny_logo_img"> <img src="/images/profile.jpg" alt="Publisher Image" id="image_publicer">  </div> <div class="custom-file">
                                         
   <input type="file"  name="author_image" class="form-control" id="author_image1" style="visibility:hidden;" onchange="readURL(this);"> 
    <label class="custom-file-label" for="author_image1"><i class="fa fa-cloud-upload" aria-hidden="true"></i>             Upload Publisher Image </label>
  </div></div>
                                  
                           
                              </div>
                            
                           </div>
                           <div class="col-lg-12">
                              <div class="form-group">
                                 <label for="e6">Keyword</label>
                                 <input type="text" placeholder="For Seo" id="e7" name="keyword" class="form-control">
                              </div>
                           </div>
                    
                      

                           <div class="col-lg-12">
                              <div class="form-group">
                                 <label for="e9">Language</label>
                                 <select id="e9" class="form-control" name="language">
                                    <option>English</option>
                                    <option>HIndi</option>
                                  
                                 </select>
                              </div>
                           </div> <div class="col-lg-12">
                                  <div class="form-group">
                                 
                                 <label>Featured image</label>
                                  <div class="comapny_logo_pre">
                                      <div class="comapny_logo_img"> <img src="/images/profile.jpg" alt="" id="image_feature">  </div> <div class="custom-file">
                                         
    <input type="file" class="custom-file-input" id="customFile" name="ads_logo" onchange="readURL2(this);"  required>
    <label class="custom-file-label" for="customFile"><i class="fa fa-cloud-upload" aria-hidden="true"></i>             Upload Featured Image </label>
  </div></div>
                                  
                           
                              </div>   
                            </div>
                                 
                               <div class="col-lg-12">
                              <div class="form-group">
                                 <label for="e2">Description(Your Own clever words)</label>
                              
                                    <section id="editor">
                            <textarea id="edit" name="description" ></textarea>
 <% errors.forEach((error)=>{  %>
                                  
                                  <% if(error.param == 'description') { %>
                                  <p class="errmsg text-danger"> <%= error.msg %> </p>
                                  
                                  <% } %>
                                  <% }); %>
</section>  
  <script>     function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#image_publicer')
                        .attr('src', e.target.result);
                };

                reader.readAsDataURL(input.files[0]);
            }
        } function readURL2(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#image_feature')
                        .attr('src', e.target.result);
                };

                reader.readAsDataURL(input.files[0]);
            }
        }
 CKEDITOR.replace("edit")</script>
           
                   </div>
                           </div>
                    
                         </div><div class="osahan-area  butnc col-md-8">
